.row
  .col-md-6.col-md-offset-3
    .signup-form.panel
      .panel-heading.border_bottom.bold Change your password
      .panel-body
        = form_for resource, url: password_path(resource_name), html:{class: 'validate', method: :put} do |f|
          = f.hidden_field :reset_password_token
          = render 'shared/form_error', model: resource
          .form-group
            = f.password_field :password, class: 'required form-control', id: 'password_field', placeholder: 'New Password', minlength: 8, autofocus: true
          .form-group
            = f.password_field :password_confirmation, class: 'required form-control', 'data-rule-equalto' => '#password_field', placeholder: 'Confirm your new password'

          .clearfix
            = button_tag 'Change Password', class: 'btn btn-primary pull-left', style: 'width: 50%'
            = link_to 'Log in', session_path(:user), class: 'pull-right btn underline'