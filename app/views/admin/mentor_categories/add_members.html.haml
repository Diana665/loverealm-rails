= form_tag url_for(action: :add_members), class: 'validate' do
  .form-group
    = label_tag :users, 'Users'
    = select_tag :users, [], class: 'form-control required hook_caller', 'data-callback' => 'User:autocomplete', 'data-exclude' =>"mentor_category_#{@category.id}", 'data-kind' => 'counselor', multiple: true, placeholder: 'Tap to search users'
  
  .form-group
    = button_tag 'Add Members', class: 'btn btn-primary', 'data-disable-with' => button_spinner