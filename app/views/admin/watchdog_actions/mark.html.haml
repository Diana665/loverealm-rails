= form_tag url_for(action: params[:action], id: params[:id]), style: 'min-height: 240px;', class: 'validate', method: :post, 'data-confirm' => "Are you sure you want to continue?" do
  - if ['mark_prevent_posting', 'mark_prevent_commenting'].include?(params[:action])
    .form-group
      = label_tag :date_until, 'Prevent commenting this user until:'
      = date_picker_input(time: true) do
        = text_field_tag :date_until, '', class: 'form-control required'
        
  .form-group
    = label_tag :reason
    = text_area_tag :reason, '', class: 'required form-control'
      
  .form-group
    = button_tag 'Submit', class: 'btn btn-primary', 'data-disable-with' => button_spinner