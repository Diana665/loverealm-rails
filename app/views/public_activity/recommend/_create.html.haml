- if activity.trackable && activity.trackable.content
  = render layout: 'public_activity/layout', locals: {activity: activity} do
    .media-left= user_avatar_widget activity.owner, 50, activity.created_at
    .media-body
      .media-heading
        = link_to_user(activity.owner, {class: 'user-name', time: activity.created_at})
      .notification-text
        asked you a #{link_to activity.trackable.content.content_type.downcase, [:dashboard, activity.trackable.content]}.
    .media-right.small
      %time.nowrap
        = time_ago_in_words(activity.created_at)
        &nbsp;ago