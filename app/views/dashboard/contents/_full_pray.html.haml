:ruby
  set_meta_tags og: {
    title: shortik(@content.description, 100),
    image: @content.user.avatar.url(:medium)
  }

= render layout: 'full_content', locals:{content: @content, no_author: true} do
  .content-body
    .question-content-text
      %h3.text-danger
        = @content.title
      .description
        = raw @content.decorate.the_body
    = render partial: 'author_info', locals: { content: @content }
    = render 'dashboard/contents/prayers_list', content: @content