:ruby
  set_meta_tags og: {
    title: shortik(@content.description, 100),
    image: @content.user.avatar.url(:medium)
  }

= render layout: 'full_content', locals:{content: @content} do
  .content-body
    .question-content-text
      %h3.text-danger
        = @content.title
      .description
        = raw @content.decorate.the_body

    .recommended_users
      - recommended_users = @content.recommended_users.to_a
      - recommended_users.each_with_index do |recommended_user, index|
        .post-author-image.inline
          = user_avatar_widget(recommended_user, 60)