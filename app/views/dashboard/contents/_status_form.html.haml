.hook_caller{'data-callback' => 'ContentEditor:status_form'}
  = simple_form_for content, url: [:dashboard, content], remote: true, input_html: { id: 'new_post_status' } do |f|
    = f.input_field :owner_id, as: :hidden
    = f.input_field :user_group_id, as: :hidden
    = f.input_field :content_type, as: :hidden, value: 'status'
    = f.input :description, label: false, placeholder: params[:post_placeholder] || 'Share what\'s happening in your life here...', required: true, wrapper_html: { class: 'margin0' }