- live_video = @content.try(:content_live_video)
:ruby
  set_meta_tags og: {
    title: shortik(@content.description, 100),
    image: live_video.try(:screenshot).try(:url)
  }

= render layout: 'full_content', locals:{content: @content, extra_heading: "#{'<small class="text-gray">was live</small>' if live_video.finished?}".html_safe} do
  .content-body
    .status-content-text
      = raw @content.decorate.the_body
      = content.decorate.the_widget_body