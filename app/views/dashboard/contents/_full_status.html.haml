:ruby
  set_meta_tags og: {
    title: shortik(@content.description, 100),
    image: @content.user.avatar.url(:medium)
  }

= render layout: 'full_content', locals:{content: @content} do
  .content-body
    .status-content-text
      = raw @content.decorate.the_body
    - if @content.content_source_type == 'Event' && @content.content_source
      .event_feed.bordered.padding10
        - event = @content.content_source.decorate
        = event.the_widget