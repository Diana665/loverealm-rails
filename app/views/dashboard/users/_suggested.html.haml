- users.decorate.each do |user|
  .user-card.col-md-6
    .user-card-content.media.media_bordered
      = link_to_user(user, {class: 'media-left'}) do
        = image_tag user.avatar.url(:square), class: 'media-object user-avatar'
  
      .media-body
        .media-heading
          .row
            .col-md-12
              .div= link_to_user(user, {class: 'text-big'})
              %p= user.the_biography(50)
            .col-md-12
              = user.the_follow_link(extra_class: 'btn-primary ujs_expression', ujs_expression: "nextAll('.cancel_btn').hide()")
              = user.the_cancel_follow_link(success_remove: '.media', extra_class: 'cancel_btn')
              = current_user.the_friend_status_for(user)

- if users.next_page
  = view_more_button(url_for(page: users.next_page), ' btn btn-primary inview_click')