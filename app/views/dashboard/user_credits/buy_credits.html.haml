= form_tag url_for(action: :buy_credits), authenticity_token: true, class: 'ujs_hide_modal validate ujs_success_reload', remote: true do
  .form-group
    %label Amount
    .input-group
      = number_field_tag :amount, '', class: 'form-control required', placeholder: 'Enter Amount', min: 10
      %span.input-group-addon= I18n.translate('number.currency.format.unit')

  = render 'dashboard/payments/form', recurring: false, card_label: 'Complete Order'