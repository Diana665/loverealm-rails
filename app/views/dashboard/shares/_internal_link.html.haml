- if content.is_shared_by? current_user
  = link_to remove_dashboard_shares_path(content_id: content.id), 'data-disable-with' => button_spinner, remote: true, method: :delete do
    %i.fa.fa-trash
    = tv('.stop_sharing')
- else
  = link_to dashboard_shares_path(content_id: content.id), 'data-disable-with' => button_spinner, remote: true, method: :post do
    %i.fa.fa-share
    = tv('.on_loverealm')
